@{
    ViewBag.Title = "Users";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";

}

@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>;

<h1>Manager Roles</h1>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Email Confirm</th>
                <th>Phone Number</th>
                <th>Phone Confirm</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr id="@item.Id">
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.EmailConfirmed</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.PhoneNumberConfirmed</td>
                    <td>
                        <a class="btn btn-warning" href="/Admin/User/Edit?id=@item.Id">Edit</a> |
                        <a class="btn btn-danger" href="/Admin/User/Delete?id=@item.Id">Delete</a>

                        </td>
                </tr>
            }
        </tbody>
    </table>
</div>
