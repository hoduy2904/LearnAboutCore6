@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model LearnAboutNet6.Areas.admin.Models.UserViewModel

<h1>Edit User</h1>

@using (Html.BeginForm(FormMethod.Post))
{
    <h2>Infomation User</h2>
    <input type="hidden" asp-for=IdentityUser.Id />
    <input type="hidden" asp-for=IdentityUser.UserName />

    <div class="form-group mb-2">
        <label class="form-label" asp-for="IdentityUser.Email">Email</label>
        <input class="form-control" asp-for=IdentityUser.Email />
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="IdentityUser.PhoneNumberConfirmed">Verify Email</label>
        @Html.CheckBoxFor(x=>x.IdentityUser.EmailConfirmed, new{@class="form-check-input"})
    </div>
    <div class="form-group mb-2">
        <label class="form-label" asp-for="IdentityUser.PhoneNumber">Phone Number</label>
        <input class="form-control" asp-for=IdentityUser.PhoneNumber />
    </div>
    <div class="form-check">
        <label class="form-check-label" asp-for="IdentityUser.PhoneNumberConfirmed">Verify Phone Number</label>
        @Html.CheckBoxFor(x=>x.IdentityUser.PhoneNumberConfirmed, new{@class="form-check-input"})
    </div>
    <hr />

    <h2 class="mt-3">Manager Roles</h2>

    @foreach (var item in Model.UserRoles)
    {
        <div class="form-check">
            <label class="form-check-label">@item.Name</label>
            <input type="checkbox" class="form-check-input" name="roles[]" value="@item.Name" checked="@(item.isChoose?"checked":"")" />
        </div>
    }
    <hr />
    <button class="btn btn-primary" type="submit">Save</button>
}


